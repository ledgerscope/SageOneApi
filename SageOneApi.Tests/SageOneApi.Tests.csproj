<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="TestHelpers\SampleFiles\DaysOfChristmas.json" />
	  <None Remove="TestHelpers\SampleFiles\FinancialSettings.json" />
	  <None Remove="TestHelpers\SampleFiles\SalesInvoices.json" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="TestHelpers\SampleFiles\DaysOfChristmas.json" />
	  <EmbeddedResource Include="TestHelpers\SampleFiles\FinancialSettings.json" />
	  <EmbeddedResource Include="TestHelpers\SampleFiles\SalesInvoices.json" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.11.0" />
		<PackageReference Include="MSTest.TestAdapter" Version="2.2.7" />
		<PackageReference Include="MSTest.TestFramework" Version="2.2.7" />
		<PackageReference Include="coverlet.collector" Version="1.3.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\SageOneApi.Client\SageOneApi.Client.csproj" />
	</ItemGroup>

	<!-- Remove tests classes for Release (because some things under test are not public in the release version).  -->
	<Choose>
		<When Condition="'$(Configuration)' == 'Release'">
			<ItemGroup>
				<Compile Remove="**\?*.tests*.cs" />
			</ItemGroup>
		</When>
	</Choose>

</Project>
